<!DOCTYPE html>
<html>
    <head>
        <title>Trailers</title>
            <meta charset="UTF-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Index</title>
            <link rel="stylesheet" type="text/css" href="/css/style.css">
            <script src="/js/script.js"></script>
    </head>
    <header>
        <div class="topnav">
        <a href="/" class="active">Home</a>
        <a href="/reviews">Reviews</a>
        <a href="/all_reviews_of_media">Media Reviews</a>
        <a href="/system_support">System_support</a>
        <a href="/users_data">User Data</a>
        <a href="/all_categories">Categories</a>
        <a href="/all_tags">Tags</a>
        <a href="/all_genres">Genres</a>
        <a href="/all_publishers">Publishers</a>
        <a href="/all_developers">Developers</a>
        <a href="/all_trailers">Trailers</a>
        <a href="/all_screenshots">Screenshots</a>
        <a href="/all_audios">Audios</a>
        <a href="/all_subtitles">Subtitles</a>
    </div>
    </header>
<body>
    <h1>                        
        <a href="/games/<%= gameId %>">
            <%= game  %> 
        </a>
        Reviews of Media
    </h1>
    <div class="table-container">
        <table>
            <thead>

            <tr>
                <th>
                    <a href="?sortBy=trailers_id&sortOrder=<%= sortOrder === 'asc' ? 'desc' : 'asc' %>" class="sort-link" data-sortby="trailers_id" data-sortorder="<%= sortOrder %>">
                        Trailer ID
                    </a>
                </th>
                <th>Trailer</th>
                <th>
                    <a href="?sortBy=trailers_URL&sortOrder=<%= sortOrder === 'asc' ? 'desc' : 'asc' %>" class="sort-link" data-sortby="trailers_URL" data-sortorder="<%= sortOrder %>">
                        Trailer URL
                    </a>
                </th>
            </tr>
            </thead>

            <tbody>
            <% for (let i = 0; i < trailers.length; i++) { %>
                <tr>
                    <td><%= trailers[i].trailers_id %></td>
                    <td>
                        <div class="video-container">
                            <video data-src="<%= trailers[i].trailers_URL %>" class="lazy-video" controls loading="lazy">
                                <source src="" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </div>
                    </td>
                    <td><a href="<%= trailers[i].trailers_URL %>" target="_blank"><%= trailers[i].trailers_URL %></a></td>
                </tr>
            <% } %>
            </tbody>

        </table>
        <a href="/">Back to Home</a>
    </div>
    <script src="/js/script.js"></script>
</body>
</html>
