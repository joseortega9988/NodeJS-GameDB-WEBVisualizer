<!DOCTYPE html>
<html>
<head>
    <title>All Categories</title>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Index</title>
        <link rel="stylesheet" type="text/css" href="/css/style.css">
    </head>
    <header>
        <div class="topnav">
        <a href="/" class="active">Home</a>
        <a href="/reviews">Reviews</a>
        <a href="/all_reviews_of_media">Media Reviews</a>
        <a href="/system_support">System_support</a>
        <a href="/users_data">User Data</a>
        <a href="/all_categories">Categories</a>
        <a href="/all_tags">Tags</a>
        <a href="/all_genres">Genres</a>
        <a href="/all_publishers">Publishers</a>
        <a href="/all_developers">Developers</a>
        <a href="/all_trailers">Trailers</a>
        <a href="/all_screenshots">Screenshots</a>
        <a href="/all_audios">Audios</a>
        <a href="/all_subtitles">Subtitles</a>
    </div>
    </header>

<body>
    <h1>All Categories</h1>
    <div class="table-container">
        <table>
            <thead>
            <tr>
                <th>
                    <a href="?sortBy=categories_id&sortOrder=<%= sortOrder === 'asc' ? 'desc' : 'asc' %>" class="sort-link" data-sortby="categories_id" data-sortorder="<%= sortOrder %>">
                        Category ID
                    </a>
                </th>
                <th>
                    <a href="?sortBy=categories_names&sortOrder=<%= sortOrder === 'asc' ? 'desc' : 'asc' %>" class="sort-link" data-sortby="categories_names" data-sortorder="<%= sortOrder %>">
                        Category Name
                    </a>
                </th>
                <th>View Games</th>
            </tr>
            </thead>

            <tbody>
            <% for (let i = 0; i < categories.length; i++) { %>
                <tr>
                    <td><%= categories[i].categories_id %></td>
                    <td><%= categories[i].categories_names %></td>
                    <td><a href="/games_by_categories/<%= categories[i].categories_id %>">View Games</a></td>

                </tr>
            <% } %>
            </tbody>

        </table>        
        <a href="/">Back to Home</a>
        </div>
</body>
</html>
